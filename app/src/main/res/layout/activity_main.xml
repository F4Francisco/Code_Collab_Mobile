<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_light"
    tools:context="com.example.franciscop.code_collab.MainActivity">

    //Logo
    <ImageView
        android:id="@+id/logoId"
        android:src="@drawable/Code_Collab_Logo"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="250dp" />

    //Login
    <com.dd.processbutton.FlatButton
        android:layout_below="@id/logoId"
        android:id="@+id/loginButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Login"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        custom:pd_colorNormal="@android:color/holo_blue_light"
        custom:pd_colorPressed= "@android:color/holo_blue_dark"/>
    //Create Account
    <com.dd.processbutton.FlatButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Create Account"
        android:layout_marginTop="9dp"
        android:layout_below="@id/loginButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        custom:pd_colorNormal="@android:color/holo_blue_light"
        custom:pd_colorPressed= "@android:color/holo_blue_dark"/>





</RelativeLayout>
