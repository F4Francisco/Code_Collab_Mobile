<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_light"
    tools:context="com.example.franciscop.code_collab.MainActivity">

    //Logo
    <ImageView
        android:id="@+id/logoId"
        android:src="@drawable/Code_Collab_Logo"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="250dp" />


    //Create Account

    <com.dd.processbutton.FlatButton
        android:id="@+id/createButtonId"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Create Account"
        android:layout_marginTop="47dp"
        android:textColor="@android:color/white"
        app:pb_colorNormal="@android:color/background_dark"
        app:pb_colorPressed="@android:color/background_light"
        android:layout_below="@+id/loginButtonId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    //Login
    <com.dd.processbutton.FlatButton
        android:id="@+id/loginButtonId"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Login"
        android:textColor="@android:color/white"
        app:pb_colorNormal="@android:color/background_dark"
        app:pb_colorPressed="@android:color/background_light"
        android:layout_below="@+id/logoId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />


</RelativeLayout>
